    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@turbo/gen": "^2.4.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.1",
    "esbuild": "^0.25.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "turbo": "^2.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "publishConfig": {
    "access": "public"
